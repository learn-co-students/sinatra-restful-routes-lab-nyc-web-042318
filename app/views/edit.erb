<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name:<input type="text" name="name" value="<%= @recipe.ingredients %>"></p>
  <p>Ingredients:<input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></p>
  <p>Cook Time:<input type="text" name="cook_time" value="<%= @recipe.ingredients %>"></p>

  <input id="submit" type="submit" name="" value="Update Ingredients">
</form>
